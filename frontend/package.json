{
  "name": "natpudan-ai",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Natpudan AI - Medical Assistant with Advanced Knowledge Base",
  "author": "Natpudan Team",
  "homepage": "https://natpudan.com",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build",
    "build:android": "npm run build:web && npx cap sync android && cd android && ./gradlew assembleRelease",
    "build:ios": "npm run build:web && npx cap sync ios && cd ios/App && xcodebuild -workspace App.xcworkspace -scheme App -configuration Release archive",
    "build:windows": "npm run build:web && electron-builder --windows",
    "build:linux": "npm run build:web && electron-builder --linux",
    "build:all": "npm run build:web && npm run build:android && npm run build:windows && npm run build:linux",
    "preview": "vite preview --port 3000",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/camera": "^5.0.9",
    "@capacitor/core": "^5.7.0",
    "@capacitor/device": "^5.0.7",
    "@capacitor/geolocation": "^5.0.7",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/keyboard": "^5.0.8",
    "@capacitor/network": "^5.0.7",
    "@capacitor/share": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor/toast": "^5.0.7",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.20",
    "@mui/material": "^5.15.20",
    "axios": "^1.7.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "typescript": "^5.6.3",
    "vite": "^7.2.2"
  },
  "build": {
    "appId": "com.natpudan.medical",
    "productName": "Natpudan AI",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-preload.js",
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Windows.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Medical",
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.medical",
      "artifactName": "${productName}-${version}-macOS.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "natpudan",
      "repo": "natpudan-ai"
    }
  }
}
