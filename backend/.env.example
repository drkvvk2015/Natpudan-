# Database Configuration
DATABASE_URL=sqlite:///./natpudan.db
# For PostgreSQL (production): DATABASE_URL=postgresql://username:password@localhost:5432/natpudan_db

# JWT Configuration
SECRET_KEY=change-me-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OAuth Configuration (Optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# OpenAI Configuration (REQUIRED for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-actual-api-key-here
OPENAI_MODEL=gpt-4o

# Medical AI Assistant Tuning
MEDICAL_AI_TEMPERATURE=0.7
MEDICAL_AI_MAX_TOKENS=2000
MEDICAL_AI_TOP_K_KNOWLEDGE_SEARCH=5

# Application Settings
ENVIRONMENT=development
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000

# Knowledge Base & Vector Search
VECTOR_SEARCH_TOP_K=5
ENABLE_KNOWLEDGE_BASE=true
KB_CACHE_DIR=backend/cache/online_knowledge
KB_DATA_DIR=backend/data/knowledge_base

# Background Workers (Optional - Celery/Redis)
# If set, scheduled tasks use Redis; otherwise local SQLite transport
REDIS_URL=
CELERY_BROKER_URL=

# Logging & Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Rate Limiting
RATE_LIMIT_LOGIN_WINDOW_SECONDS=60
RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5

# CORS Configuration (development - restrict in production)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:5174,http://127.0.0.1:3000
