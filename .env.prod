# Production Environment Configuration for Natpudan AI
# This file is used by deploy-podman-production.ps1 for container deployment

# ============================================
# Compose Project Name (No dashes or underscores in service names!)
# ============================================
COMPOSE_PROJECT_NAME=natpudan

# ============================================
# Database Configuration (PRODUCTION - PostgreSQL)
# ============================================
DATABASE_URL=postgresql://physician_user:secure_password@db:5432/physician_ai
POSTGRES_USER=physician_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=physician_ai

# ============================================
# JWT & Security Configuration
# ============================================
SECRET_KEY=your-production-secret-key-change-this-to-random-256-char-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# OAuth Configuration (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================
# OpenAI Configuration (REQUIRED)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-actual-api-key-here
OPENAI_MODEL=gpt-4o

# ============================================
# Medical AI Assistant Tuning
# ============================================
MEDICAL_AI_TEMPERATURE=0.7
MEDICAL_AI_MAX_TOKENS=2000
MEDICAL_AI_TOP_K_KNOWLEDGE_SEARCH=5

# ============================================
# Application Settings
# ============================================
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration for Production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Redis Configuration (Background Jobs)
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Optional: Monitoring & Error Tracking
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================
# File Storage Configuration
# ============================================
UPLOAD_DIR=/app/backend/uploads
MAX_UPLOAD_SIZE=52428800

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://yourdomain.com
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com/ws

# ============================================
# Container Ports (for docker-compose)
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
